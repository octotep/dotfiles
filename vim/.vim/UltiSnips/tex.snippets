### Note snippets
### 
### Here are snippets for note taking
snippet note "Note snippet" b
\documentclass{scrartcl}

% Put all packages here:
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{csvsimple}
\usepackage{filecontents}
\usepackage{graphicx}
\usepackage{minted}
\usepackage{fancyhdr}
\pagestyle{fancy}

% Title information goes here
\title{$1}
\subtitle{${2:A}${2/(A)$|(C)$|(Pa)$|(Ps)$|(I)$|(.*)/(?1:nalysis of Algorithms)(?2:ryptology)(?3:rallel and Distributed Computing)(?4:ychology)(?5:ntro to Music Lit)/}}
\date{\small `date +%Y--%m--%d`}
\author{\small Chris Yealy}

\begin{document}

\maketitle

$0

\end{document}
endsnippet


global !p
import os.path
import urlparse
def name(url):
	return os.path.basename(urlparse.urlparse(url).path)
endglobal

snippet linkpic "Insert a picture from a url" b
% Download a picture
\IfFileExists{${2:`!p snip.rv = name(t[1])`}}{}{\immediate\write18{curl -o $2 ${1:http://}}}
\begin{center}
\includegraphics[width=0.${3:5}\textwidth]{$2}
\end{center}
$0
endsnippet


snippet figpic "Insert a figure from a url" b
% Download a picture
\IfFileExists{${2:`!p snip.rv = name(t[1])`}}{}{\immediate\write18{curl -o $2 ${1:http://}}}
\begin{figure}[h!]
	\centering
	\includegraphics[width=0.${3:5}\textwidth]{$2}
	\caption{${2/(\w+)\.\w+/\u$1/}$4}
	\label{fig:${2/(\w+)\.\w+/$1/}}
\end{figure}
$0
endsnippet


